doctype html
html
	head
	body
		a(href='/') home
		h2 Welcome to the registration page.
		p on this page you can register for an account, to do so please fill in the form.
		

		form(action='/register' method='post')
			label name
			input#name(name='name' required)
			br
			label email
			input#email(name='email' required)
			br
			label password
			input#password(type='password' name='password' required)
			input(type='submit' value='register' id='submit')
